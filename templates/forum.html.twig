    <!--explore start -->
    <section id="explore" class="explore">
        <div class="container">
            <div class="section-header">
            </div><!--/.section-header-->

            <html lang="en">
            
            <!--blog start -->
            <section id="blog" class="blog" >
                <div class="container">
                    <div class="section-header">
                        <img src="assets/images/blog/.jpg" alt="">
                        <h2>news and articles</h2>
                        <p>Always upto date with our latest News and Articles </p>
                        <style>
                            /* Styles spécifiques pour le titre h2 */
                            .section-header h2 {
                                font-family: Alice, sans-serif; /* Changer la police */
                                color: blue; /* Changer la couleur */
                                font-weight: bold; /* Ajouter le gras */
                            }
                            /* Style pour l'image */
                            .section-header img {
                                max-width: 10%; /* Pour s'assurer que l'image ne dépasse pas de la section */
                                display: block; /* Pour éviter tout espace supplémentaire autour de l'image */
                                margin: 0 auto 20px; /* Pour centrer l'image horizontalement et ajouter un peu d'espace en bas */
                            }
                        </style>
                    </div><!--/.section-header-->


                    <div class="blog-content">
                        <div class="row">
                            {% for post in posts %}
                            <div class="col-md-4 col-sm-6">
                                <div class="single-blog-item">
                                    <div class="single-blog-item-img">
                                        <img src="assets/images/blog/{{ post.idPost }}.jpg" alt="blog image">
                                    </div>
                                    <div class="single-blog-item-txt">
                                        <h2><a href="{{ path('app_comment_new', {'postId': post.idPost})  }}">{{ post.title }}</a></h2>
                                        <h4>posted <span>by</span> <a href="#">{{ post.author }}</a> {{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</h4>
                                        <!-- Loop through comments for this post -->
                                        {% for comment in post.comments %}
                                        <meta charset="UTF-8">
                                            <meta name="viewport" content="width=device-width, initial-scale=1.0">
                                            <title>Forum Comment</title>
                                            <style>
                                                .comment {
                                                    border: 1px solid #ccc;
                                                    border-radius: 5px;
                                                    padding: 10px;
                                                    margin-bottom: 20px;
                                                }

                                                .comment-header {
                                                    display: flex;
                                                    align-items: center;
                                                }

                                                .comment-header img {
                                                    width: 50px;
                                                    height: 50px;
                                                    border-radius: 50%;
                                                    margin-right: 10px;
                                                }

                                                .user-info h3 {
                                                    margin: 0;
                                                }

                                                .comment-date {
                                                    color: #777;
                                                    font-size: 12px;
                                                }

                                                .comment-content p {
                                                    margin: 0;
                                                    font-size: 14px;
                                                    line-height: 1.5;
                                                }

                                                .comment-actions {
                                                    margin-top: 10px;
                                                }

                                                .btn-reply,
                                                .btn-like {
                                                    padding: 5px 10px;
                                                    background-color: #007bff;
                                                    color: #fff;
                                                    border: none;
                                                    border-radius: 3px;
                                                    cursor: pointer;
                                                    margin-right: 10px;
                                                }

                                                .btn-reply:hover,
                                                .btn-like:hover {
                                                    background-color: #0056b3;
                                                }
                                            </style>

                                        <div class="comment">
                                            <div class="comment-header">
                                                <img src="assets/images/blog/pr.jpg" alt="eya boukhzar">
                                                <div class="user-info">
                                                    <h3>{{ comment.AuthorC}}</h3>
                                                    <span class="comment-date">{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</span>
                                                </div>
                                            </div>
                                            <div class="comment-content">
                                                <p>{{ comment.content}}</p>
                                            </div>
                                            <div class="comment-actions">
                                                <button class="btn-reply">Reply</button>
                                                <button class="btn-like">Like</button>
                                            </div>
                                        </div>
                                        {% endfor %}

                                    </div>
                                </div>
                            </div>
                            {% else %}
                                <div class="col-md-12">
                                    <p>No posts found.</p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div><!--/.container-->


            </section><!--/.blog-->
            <!--blog end -->

